doctype html
html
  head
  title= title
  link(rel='stylesheet', href='/stylesheets/register.css')
  script(src="https://use.fontawesome.com/cb1b821ad2.js")
  body
    header
      a(class='fa fa-home' href='/') Home
      h1 #{title}
      a(class='fa fa-sign-in' href='/login') Login
    article
      h3(id='') Enter the
      form(id='register' method='post' action='/registerusers')
        div
          label(for='fname') Firstname
          input(type='text' id='fname' name='fname')
        div
          label(for='lname') Lastname
          input(type='text' id='lname' name='lname')
        div
          label(for='email') Email
          input(type='email' name='email' placeholder='name@school.com')
        div
          label(for='telephone') Telephone
          input(id='telephone' type='text' name='telephone')
        div
          label(for='schoolname') Schoolname
          input(type='text' id='schoolname' name='schoolname')
        div
          label(for='schooladdress') School Address
          input(type='text' name='schooladdress')
        div
          label(for='schooltel') School Tel.
          input(id='schooltel' type='text' pattern='[0-9]{3}[ -][0-9]{3}[ -][0-9]{4' name='schooltel')
        div
          
        div
          label(for='password') Password
          input(type='password' id='password' name='password')
        div
          label(for='verifypassword') Re-enter Password
          input(type='password' id='verifypassword' name='verifypassword')
        div
          input(type='submit' id='submit' onclick='regSubmit')
    script(src='../public/javascripts/register.js')
